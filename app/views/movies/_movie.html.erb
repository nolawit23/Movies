<div id="<%= dom_id movie %>" class="card">
  <div class="card-body">
    <h5 class="card-title"><%= movie.title %></h5>

    <p class="card-text">
      <strong>Description:</strong>
      <%= movie.description %>
    </p>

    <p class="card-text">
      <strong>Director:</strong>
      <%= movie.director %>
    </p>

    <p class="card-text">
      <strong>Release date:</strong>
      <%= movie.release_date %>
    </p>
  </div>
</div>
